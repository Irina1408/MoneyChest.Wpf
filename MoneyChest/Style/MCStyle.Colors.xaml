<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:local="clr-namespace:MoneyChest.Style">

    <Color x:Key="RedColor">Red</Color>
    <Color x:Key="GreenColor">Green</Color>

    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}" />
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"/>

    <SolidColorBrush x:Key="RemarkForeground" Color="Gray"/>
    <SolidColorBrush x:Key="CalendarWeekendBackground" Color="LightPink"/>

    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="{DynamicResource BlackColor}"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="{DynamicResource BlackColor}" />
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="{DynamicResource AccentColor}" />
    <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="{DynamicResource BlackColor}" />
    
    <!-- From resources -->
    <!--BlackColor/BlackBrush-->
    <!--WhiteColor/WhiteBrush-->
</ResourceDictionary>