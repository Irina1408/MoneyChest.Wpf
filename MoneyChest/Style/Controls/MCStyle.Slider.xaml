<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MoneyChest.Style.Controls">

    <Style x:Key="MCSliderStyle" TargetType="{x:Type Slider}" BasedOn="{StaticResource MaterialDesignSlider}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <Style x:Key="MCDiscreteSliderStyle" TargetType="{x:Type Slider}" BasedOn="{StaticResource MaterialDesignDiscreteSlider}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>
</ResourceDictionary>