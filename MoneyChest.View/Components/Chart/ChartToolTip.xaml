<UserControl x:Class="MoneyChest.View.Components.Chart.ChartToolTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyChest.View.Components.Chart"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="{DynamicResource MaterialDesignToolTipBackground}">
    <Grid x:Name="MainGrid">
        <StackPanel Orientation="Horizontal" Margin="5">
            <Rectangle Stroke="{Binding Sender.Stroke}" Fill="{Binding Sender.Fill}" Height="25" Width="25"/>
            <TextBlock Text="{Binding Sender.Title}" Margin="5 0 0 0" Foreground="{DynamicResource WhiteBrush}"
                       FontSize="{DynamicResource LargeFontSize}"/>
            <TextBlock Text="{Binding Value}" Margin="5 0 0 0" Foreground="{DynamicResource WhiteBrush}"
                       FontSize="{DynamicResource LargeFontSize}"/>
        </StackPanel>
    </Grid>
</UserControl>
