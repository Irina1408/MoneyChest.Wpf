<UserControl x:Class="MoneyChest.View.Components.CalendarDayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyChest.View.Components"
             xmlns:model="clr-namespace:MoneyChest.Model.Model;assembly=MoneyChest.Model"
             xmlns:modelCal="clr-namespace:MoneyChest.Model.Calendar;assembly=MoneyChest.Model"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:converters="clr-namespace:MoneyChest.View.Converters"
             xmlns:moneyChestView="clr-namespace:MoneyChest.View"
             mc:Ignorable="d" MinWidth="50"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BVConverter"/>
        <converters:PercentageConverter x:Key="PctConverter"/>
        
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
            <Setter Property="Margin" Value="3 1 3 1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="TransactionLabelStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
            <Setter Property="Margin" Value="3 1 3 1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPlanned}" Value="True">
                    <Setter Property="Opacity" Value="0.5" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsIncome}" Value="True">
                    <Setter Property="Foreground" Value="Green" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsExpense}" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- TODO: allow to select cell height-->
    <Grid x:Name="MainGrid">
        <!-- Change opacity for inacive day -->
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="Opacity" Value="1"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsActive}" Value="false">
                        <Setter Property="Opacity" Value="0.5"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <!-- Main day border -->
        <Border BorderThickness="1" BorderBrush="{DynamicResource GrayBrush7}">
            <!--<Border.Background>
                <SolidColorBrush Color="{DynamicResource Gray10}" Opacity="0.4"></SolidColorBrush>
            </Border.Background>-->
            
            <!-- Main data grid -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top row (month name or "today" remark and day of month)-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Change background for today -->
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource AccentColor3}"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Data.IsWeekend}" Value="true">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="LightPink"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Data.IsToday}" Value="true">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource AccentColor}"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Label Grid.Column="0" Content="{Binding Header}" FontSize="{DynamicResource MiddleFontSize}"/>
                    <Label Grid.Column="1" Content="{Binding Data.DayOfMonth}" FontSize="{DynamicResource MiddleFontSize}" FontWeight="Bold"/>
                </Grid>

                <!-- Transactions list -->
                <Grid Grid.Row="1" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding Data.LimitedTransactions}" Grid.Row="0" Focusable="False" Background="Transparent">
                            <ItemsControl.ToolTip>
                                <ToolTip Placement="Mouse">
                                    <ItemsControl ItemsSource="{Binding Data.FilteredTransactions}" Focusable="False">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type model:ITransaction}">
                                                <Border BorderThickness="0.5" BorderBrush="{Binding IdealForegroundColorBrush}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Label Grid.Column="0" Content="{Binding Description}" 
                                                           Foreground="{DynamicResource IdealForegroundColorBrush}"/>
                                                        <Label Grid.Column="1" Content="{Binding TransactionValueDetailed}"
                                                           Foreground="{DynamicResource IdealForegroundColorBrush}"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ToolTip>
                            </ItemsControl.ToolTip>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type model:ITransaction}">
                                    <Border BorderThickness="0.5" BorderBrush="{Binding IdealForegroundColorBrush}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" Content="{Binding Description}" Style="{StaticResource TransactionLabelStyle}"/>
                                            <Label Grid.Column="1" Content="{Binding TransactionValueDetailed}" Style="{StaticResource TransactionLabelStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <iconPacks:PackIconEntypo Kind="DotsThreeHorizontal" Grid.Row="1" Visibility="{Binding ShowDots, Converter={StaticResource BVConverter}}" Margin="5 -2 5 -10"/>
                </Grid>
                
                <!-- Totals row -->
                <Grid Grid.Row="2" Margin="0 5 0 0">
                    <!--<Grid.Background>
                        <SolidColorBrush Color="{DynamicResource Gray7}" Opacity="0.7"/>
                    </Grid.Background>-->
                    <Label HorizontalAlignment="Right" Content="{Binding Data.TotDayAmountDetailed}" Padding="0"/>
                </Grid>
                
                <!-- Bottom row (Limits and Storage summary) -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource Gray6}"/>
                    </Grid.Background>

                    <Label Grid.Column="0" HorizontalAlignment="Left" Background="Transparent" VerticalAlignment="Center"
                           Visibility="{Binding ShowAnyAccountNegative, Converter={StaticResource BVConverter}}">
                        <Label.ToolTip>
                            <ToolTip Placement="Mouse">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconOcticons Kind="Alert" Foreground="{DynamicResource IdealForegroundColorBrush}"/>
                                    <Label Content="{moneyChestView:MultiLangBinding Calendar_IsAnyAccountNegative}" 
                                           Foreground="{DynamicResource IdealForegroundColorBrush}"/>
                                </StackPanel>
                            </ToolTip>
                        </Label.ToolTip>
                        <iconPacks:PackIconOcticons Kind="Alert" Foreground="Red"/>
                    </Label>
                    
                    <!--<Label Grid.Column="0" HorizontalAlignment="Left" Content="{Binding LimitSummary}" Margin="0" Padding="0"/>-->
                    <ItemsControl ItemsSource="{Binding Data.FilteredStorages}" Focusable="False" 
                                  Grid.Column="2" HorizontalAlignment="Right" Background="Transparent">
                        <ItemsControl.Style>
                            <Style TargetType="{x:Type ItemsControl}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowAllStorages}" Value="true">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.Style>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}">
                                    <!--<StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Setter Property="MaxWidth" Value="{Binding ActualWidth, Converter={StaticResource PctConverter}, 
                                RelativeSource={RelativeSource AncestorType={x:Type Grid}}, ConverterParameter=1,
                                UpdateSourceTrigger=PropertyChanged}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Data.IsAnyAccountNegative}" Value="True">
                                                    <Setter Property="Width" Value="{Binding ActualWidth, Converter={StaticResource PctConverter}, 
                                RelativeSource={RelativeSource AncestorType={x:Type Grid}}, ConverterParameter=0.9,
                                UpdateSourceTrigger=PropertyChanged}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>-->
                                </StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type modelCal:StorageState}">
                                <Border BorderThickness="0.5" BorderBrush="{Binding IdealForegroundColorBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Content="{Binding Storage.Name}" FontSize="{DynamicResource SmallFontSize}">
                                            <Label.Style>
                                                <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
                                                    <Setter Property="Margin" Value="3 1 3 1"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsNegative}" Value="true">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                        <Label Grid.Column="1" Content="{Binding AmountDetailed}" Margin="5 0 0 0">
                                            <Label.Style>
                                                <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsNegative}" Value="true">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <Label Grid.Column="2" HorizontalAlignment="Right" Background="Transparent" 
                           Content="{Binding Data.TotStorageSummaryDetailed}">
                        <Label.Style>
                            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
                                <Setter Property="Margin" Value="3 1 3 1"/>
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowAllStorages}" Value="true">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                        <Label.ToolTip>
                            <ToolTip>
                                <ItemsControl ItemsSource="{Binding Data.FilteredStorages}" Focusable="False">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type modelCal:StorageState}">
                                            <Border BorderThickness="0.5" BorderBrush="{Binding IdealForegroundColorBrush}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0" Content="{Binding Storage.Name}">
                                                        <Label.Style>
                                                            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
                                                                <Setter Property="Padding" Value="0"/>
                                                                <Setter Property="Foreground" 
                                                                        Value="{DynamicResource IdealForegroundColorBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsNegative}" Value="true">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>
                                                    <Label Grid.Column="1" Content="{Binding AmountDetailed}">
                                                        <Label.Style>
                                                            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
                                                                <Setter Property="Padding" Value="0"/>
                                                                <Setter Property="Foreground" 
                                                                        Value="{DynamicResource IdealForegroundColorBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsNegative}" Value="true">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ToolTip>
                        </Label.ToolTip>
                    </Label>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
