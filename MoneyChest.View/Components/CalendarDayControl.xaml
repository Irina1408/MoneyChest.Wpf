<UserControl x:Class="MoneyChest.View.Components.CalendarDayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyChest.View.Components"
             xmlns:model="clr-namespace:MoneyChest.Model.Model;assembly=MoneyChest.Model"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" MinWidth="50"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
            <Setter Property="Margin" Value="3 1 3 1"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="TransactionLabelStyle" TargetType="{x:Type Label}" BasedOn="{StaticResource MCLabelStyle}">
            <Setter Property="Margin" Value="3 1 3 1"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPlanned}" Value="True">
                    <Setter Property="Opacity" Value="0.5" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsIncome}" Value="True">
                    <Setter Property="Foreground" Value="Green" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsExpense}" Value="True">
                    <Setter Property="Foreground" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Height="150">
        <!-- Change opacity for inacive day -->
        <Grid.Style>
            <Style TargetType="{x:Type Grid}">
                <Setter Property="Opacity" Value="1"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsActive}" Value="false">
                        <Setter Property="Opacity" Value="0.5"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <!-- Main day border -->
        <Border BorderThickness="1" BorderBrush="{DynamicResource GrayBrush7}">
            <!--<Border.Background>
                <SolidColorBrush Color="{DynamicResource Gray10}" Opacity="0.4"></SolidColorBrush>
            </Border.Background>-->
            
            <!-- Main data grid -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top row (month name or "today" remark and day of month)-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Change background for today -->
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource AccentColor3}" Opacity="0.5"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Data.IsToday}" Value="true">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource AccentColor}" Opacity="0.6"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Label Grid.Column="0" Content="{Binding Header}" FontSize="{DynamicResource MiddleFontSize}"/>
                    <Label Grid.Column="1" Content="{Binding Data.DayOfMonth}" FontSize="{DynamicResource MiddleFontSize}" FontWeight="Bold"/>
                </Grid>

                <!-- Transactions list -->
                <Grid Grid.Row="1" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ItemsControl ItemsSource="{Binding Data.FilteredTransactions}" Grid.Row="0" Focusable="False">
                        <!--<ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer x:Name="TransactionsScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                                    <Grid Width="{Binding ViewportWidth, ElementName=TransactionsScrollViewer}">
                                        <StackPanel>
                                            <ItemsPresenter />
                                        </StackPanel>
                                    </Grid>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>-->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:ITransaction}">
                                <Border BorderThickness="0.5" BorderBrush="{Binding IdealForegroundColorBrush}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Content="{Binding Description}" Style="{StaticResource TransactionLabelStyle}"/>
                                        <Label Grid.Column="1" Content="{Binding TransactionValueDetailed}" Style="{StaticResource TransactionLabelStyle}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <!--<iconPacks:PackIconEntypo Kind="DotsThreeHorizontal" Grid.Row="1"/>-->
                </Grid>
                
                <!-- Totals row -->
                <Grid Grid.Row="2">
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource Gray7}" Opacity="0.7"/>
                    </Grid.Background>
                    <Label HorizontalAlignment="Right" Content="{Binding Data.TotDayAmountDetailed}" Padding="0"/>
                </Grid>
                
                <!-- Bottom row (Limits and Storage summary) -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Background>
                        <SolidColorBrush Color="{DynamicResource Gray6}" Opacity="0.7"/>
                    </Grid.Background>

                    <!--<Label Grid.Column="0" HorizontalAlignment="Left" Content="{Binding LimitSummary}" Margin="0" Padding="0"/>-->
                    <!--<Label Grid.Column="1" HorizontalAlignment="Right" Content="{Binding StorageSummary}"/>-->
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
